<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainDatePickerActivity">

    <ScrollView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/choice_number_pad"
            android:orientation="vertical">

            <RadioButton
                android:id="@id/choice_number_pad"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Number Pad, Light"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/choice_number_pad_dark"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Number Pad, Dark"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/choice_number_pad_custom"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Number Pad, Custom"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/choice_number_pad_custom_dark"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Number Pad, Custom Dark"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/choice_grid_picker"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Grid Picker, Light" />

            <RadioButton
                android:id="@+id/choice_grid_picker_dark"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Grid Picker, Dark"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/choice_grid_picker_custom"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Grid Picker, Custom"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/choice_grid_picker_custom_dark"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Grid Picker, Custom Dark"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/choice_date_picker"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Date Picker, Light" />

            <RadioButton
                android:id="@+id/choice_date_picker_dark"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Date Picker, Dark"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/choice_date_picker_custom"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Date Picker, Custom"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/choice_date_picker_custom_dark"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Date Picker, Custom Dark"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="48dp"
                android:text="Time set: "
                android:textSize="20sp" />

        </RadioGroup>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/ic_dialpad_24dp" />

</RelativeLayout>
